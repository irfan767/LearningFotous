<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:weightSum="3"
    tools:context=".uiActivities.LoginActivity">

    <com.daasuu.ahp.AnimateHorizontalProgressBar
        android:id="@+id/animate_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        app:ahp_backgroundColor="@color/md_white_1000"
        app:ahp_progressColor="@color/md_red_A400" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/im_truck"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_new_splash" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_white_1000">

        </View>

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:text="PHONE NO"
                android:textColor="@color/md_white_1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:textColor="@color/md_black_1000"
                android:text="نمبر"
                android:layout_alignParentRight="true" />
            </RelativeLayout>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_round_universal"
                android:inputType="number"
                android:maxLines="1"
                android:padding="7dp"
                android:singleLine="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:text="PASSWORD"
                android:textColor="@color/md_white_1000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="پاسورڈ"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18dp"
                android:textColor="@color/md_black_1000"
                android:layout_alignParentRight="true" />
            </RelativeLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_round_universal"
                android:backgroundTint="@color/md_white_1000"
                android:imeActionId="6"
                android:imeActionLabel="Sign in"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="7dp"
                android:singleLine="true" />

            <LinearLayout
                android:id="@+id/lil_forgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="FORGOT PASSWORD ?"
                    android:textColor="@color/md_white_1000"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_white_1000">

                </View>
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_round_universal"
                android:fontFamily="@font/nunito_semibold"
                android:text="LOG IN / لاگ ان کریں "
                android:textColor="@color/md_black_1000"
                android:textSize="18dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/or_boder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_login_form"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:background="@color/md_white_1000">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="OR"
                    android:textColor="@color/md_white_1000" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:background="@color/md_white_1000"></View>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_boder"
            android:orientation="vertical">
            <!-- <Button
                 android:id="@+id/loginwithfb"
                 style="?android:textAppearanceSmall"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:paddingLeft="20dp"
                 android:textSize="18sp"
                 android:textAlignment="center"
                 android:drawableLeft="@drawable/ic_facebook"
                 android:background="@drawable/button_round_universal"
                 android:text="@string/login_with_facebook"
                 android:textColor="@color/md_black_1000"
                 android:fontFamily="@font/nunito_semibold"

                 android:drawableStart="@drawable/ic_facebook" />-->
            <LinearLayout
                android:id="@+id/lil_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Don't have an account?"
                    android:textColor="@color/md_white_1000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text=" Sign Up"
                    android:textColor="@color/md_white_1000"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/tv_skip_to_home"
            android:layout_marginTop="10dp"
            android:background="@color/md_white_1000"></View>

        <TextView
            android:id="@+id/tv_skip_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text="Skip to home"
            android:textColor="@color/md_white_1000"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>