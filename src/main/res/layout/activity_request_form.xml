<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".uiActivities.SignupActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearabove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_back_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="REQUEST FORM"
            android:textColor="@color/md_white_1000"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <com.daasuu.ahp.AnimateHorizontalProgressBar
        android:id="@+id/animate_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linearabove"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:ahp_backgroundColor="@color/colorPrimary"
        app:ahp_progressColor="@color/md_red_A400" />

    <LinearLayout
        android:id="@+id/imglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearabove"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imglayout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="EMAIL (OPTIONAL)"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="ای میل"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
        </RelativeLayout>



        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_round_universal"
            android:inputType="textEmailAddress"
            android:maxLines="1"


            android:padding="8dp"
            android:singleLine="true" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="NAME (OPTIONAL)"
                android:textColor="@color/md_white_1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="نام"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
        </RelativeLayout>





        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_round_universal"
            android:backgroundTint="@color/md_white_1000"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="NUMBER"
                android:textColor="@color/md_white_1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="نمبر"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_code"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_round_universal" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/spinner_code"
                android:background="@drawable/textview_round_universal"
                android:hint="Mobile"
                android:inputType="number"
                android:padding="8dp"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="AREA IN ACRES"
                android:textColor="@color/md_white_1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="ایکڑ میں میدان۔"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_round_universal"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="BUSINESS ADDRESS"
                android:textColor="@color/md_white_1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="کاروباری پتہ"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
        </RelativeLayout>



        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_round_universal"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="CITY"
                android:textColor="@color/md_white_1000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="سٹی"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />
        </RelativeLayout>



        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/textview_round_universal" />

        <Button
            android:id="@+id/btn_signup"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_round_universal"
            android:fontFamily="@font/nunito_semibold"
            android:text="SIGNUP / سائن اپ"
            android:textColor="@color/md_black_1000"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>



</ScrollView>