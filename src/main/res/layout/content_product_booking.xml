<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    android:background="@color/md_white_1000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".uiActivities.ProductBookingActivity"
    tools:showIn="@layout/activity_product_booking">
    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imglayout"
        android:orientation="vertical"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_bold"
        android:text="QUANTITY IN KG "
        android:textAllCaps="true"
        android:textSize="18dp"

        android:textColor="@color/md_black_1000"
        android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="مقدار"
                android:textAllCaps="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/md_black_1000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <EditText
        android:id="@+id/et_qty"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/textview_round_universal"
        android:inputType="number"
        android:maxLines="1"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:layout_marginTop="8dp"

        android:singleLine="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_bold"
        android:text="SIZE "
        android:textAllCaps="true"
        android:textColor="@color/md_black_1000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="سائز"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/md_black_1000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />
        </RelativeLayout>

        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/spinner_city"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:elevation="5dp"
            android:layout_margin="2dp"

            android:background="@drawable/textview_round_universal" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="20dp">
        <android.support.v7.widget.CardView
            android:id="@+id/card_dundee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"

            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/linear_without_dundee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_UrlDundee"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:paddingTop="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/ic_wdundee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="ORANGE"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginBottom="5dp" />





            </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_city"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"

        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/linear_dundee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_Url"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ic_dund" />

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="ORANGE"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/md_black_1000"
                android:layout_marginBottom="5dp" />





        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunito_bold"
            android:text=" AMOUNT IN PKR BY SIZE"
            android:textAllCaps="true"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"                android:fontFamily="@font/nunito_bold"
                android:text="قیمت سائز کے لحاظ سے"
                android:textAllCaps="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/md_black_1000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/textview_round_universal"
            android:maxLines="1"
            android:padding="8dp"
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_margin="2dp"
            android:singleLine="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Exact Location"
            android:textColor="@color/md_black_1000"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_bold"
                android:text="مقام"
                android:textAllCaps="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/md_black_1000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lay_search"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txt_search"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Search (تلاش)"
                android:textColor="@color/md_black_1000"
                android:drawableRight="@drawable/ic_menu_send"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/lay_search"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="50dp"
            android:layout_above="@+id/btn_publishAd">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                class="com.ftocs.myapp.utils.WorkaroundMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_rectangle"
        android:fontFamily="@font/nunito_bold"
        android:text="SUBMIT / لاگ ان کریں"
        android:textColor="@color/md_white_1000"
        android:textSize="18dp" />
</RelativeLayout>